{
  "name": "backend",
  "version": "0.0.0",
  "description": "TypeScript + GraphQL + TypeORM + PostgreSQL + Express API Server",
  "license": "ISC",
  "author": "",
  "scripts": {
    "build": "swc src -d dist --source-maps --copy-files",
    "build:tsc": "tsc && tsc-alias",
    "deploy": "source scripts/helpers.sh; deploy",
    "deploy:build": "docker-compose --file docker-compose.prod.yml build",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev",
    "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only prod",
    "dev": "cross-env NODE_ENV=development nodemon",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "test": "jest --forceExit --detectOpenHandles"
  },
  "dependencies": {
    "@typegoose/typegoose": "^9.9.0",
    "apollo-server-core": "^3.8.2",
    "apollo-server-express": "^3.8.2",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "graphql": "^15.8.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-query-complexity": "^0.11.0",
    "helmet": "^5.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "mongodb": "^4.7.0",
    "mongoose": "^6.3.6",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.197",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/jest": "28.1.x",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.41",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "jest": "28.1.x",
    "node-config": "^0.0.2",
    "node-gyp": "^9.0.0",
    "nodemon": "^2.0.16",
    "pm2": "^5.2.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "tsc-alias": "^1.6.9",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.3"
  }
}
